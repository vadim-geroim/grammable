<div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3">
  <% @grams.each do |gram| %>
    <div class="card">
      <div class="handle">
        <%= gram.user.email %>
      </div>
      <% unless gram.picture.blank? %>
        <%= image_tag(gram.picture.url, class: 'img-fluid') %>
      <% end %>
      <p>
         <%= gram.message %>
      </p>
      <div class="gram-actions float-right">
        <% if current_user && current_user == gram.user %>
          <%= link_to 'Edit', edit_gram_path(gram) %>
          <%= link_to 'Delete', gram_path(gram), method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div> 
      <br class="clear-fix" />
      <br />
      <br />
      <div class="comments">
        <h3>
          Comments
        </h3>
        <% gram.comments.each do |comment| %>
          <div class="comment">
            <span class="comment_handle">
              <%= comment.user.email %>
            </span>
            <%= comment.message %>
          </div>
        <% end %>
        <h4 class="comment-title">
          Add a comment
        </h4>
        <%= simple_form_for @comment, url: gram_comments_path(gram) do |f| %>
          <%= f.input :message %>
          <%= f.submit 'Add Comment', class: 'my-btn' %>
        <% end %>
      </div> 
    </div>
  <% end %>  
</div>

